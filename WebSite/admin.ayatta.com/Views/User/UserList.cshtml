@model HelpListModel

<div class="container">
    <div class="card">
        @using (Html.BeginForm())
        {
            <div class="card-header ch-alt">
                <h2>帮助 列表</h2>
                <ul class="actions">
                    <li>
                        <a href="/sys/help-detail/" title="添加">
                            <i class="zmdi zmdi-plus c-red"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th>Id</th>
                                <th>父Id</th>
                                <th>标题</th>

                                <th>排序</th>
                                <th>状态</th>
                                <th>创建时间</th>
                                <th>操 作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var o in Model.Helps)
                            {
                                <tr>
                                    <td>
                                        @(o.Id)
                                    </td>
                                    <td>@(o.ParentId)</td>
                                    <td>
                                        @(o.Title)
                                    </td>

                                    <td>@(o.Priority)</td>
                                    <td>
                                        @(o.Status)
                                    </td>
                                    <td>
                                        @(o.CreatedOn.ToString("yyyy-MM-dd HH:mm:ss"))
                                    </td>
                                    <td>
                                        <a href="~/sys/help-detail/@(o.Id)" class="btn bgm-cyan btn-xs waves-effect m-l-10" title="编辑"><i class="md md-mode-edit"></i>编辑</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>

