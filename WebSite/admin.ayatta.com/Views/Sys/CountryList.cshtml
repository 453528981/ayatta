@model CountryListModel

<div class="container">
    <div class="card">
        @using (Html.BeginForm())
        {
            <div class="card-header ch-alt">
                <h2>国家 列表</h2>
                <ul class="actions">
                    <li>
                        <a href="/sys/country-detail/" title="添加">
                            <i class="zmdi zmdi-plus c-red"></i>
                        </a>                        
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th>三位数字代码</th>
                                <th>三位字母代码</th>
                                <th>中文名称</th>
                                <th>英文名称</th>
                                <th>状态</th>
                                <th>操 作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var o in Model.Countries)
                            {
                                <tr>
                                    <td>
                                        @(o.Id)
                                    </td>
                                    <td>
                                        @(o.Code)
                                    </td>
                                    <td>
                                        @(o.Name)
                                    </td>
                                    <td>
                                        @(o.EnName)
                                    </td>
                                    <td>
                                        @(o.Status)
                                    </td>
                                    <td>
                                        <a href="~/sys/country-detail/@(o.Id)" title="编辑"><i class="zmdi zmdi-edit f-18 c-bluegray"></i></a>
                                        <a href="~/sys/country-delete/@(o.Id)" title="删除" class="m-l-10" onclick="deleteItem(this); return false;"><i class="zmdi zmdi-delete f-18 c-gray"></i></a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>

