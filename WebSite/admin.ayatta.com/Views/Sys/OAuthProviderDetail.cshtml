@model OAuthProviderDetailModel

<div class="container">
    <div class="card">
        <div class="card-header ch-alt">
            <h2>@(Model.OAuthProvider.Id.IsNullOrEmpty() ? "添加" : "编辑") 第三方登录</h2>
        </div>
        <div class="card-body card-padding">
            @using (Html.BeginForm())
            {


                <div class="form-group">
                    <div class="fg-line">
                        <label for="input-Id">Id</label>
                        @if (!Model.OAuthProvider.Id.IsNullOrEmpty())
                        {

                            <p class="form-control-static">@(Model.OAuthProvider.Id)</p>
                        }
                        else
                        {

                            <input id="input-Id" name="Id" type="text" class="form-control" maxlength="20" value="@(Model.OAuthProvider.Id)" placeholder="Id">
                        }
                    </div>
                </div>

                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-Name">名称</label>
                            <input id="input-Name" name="Name" type="text" class="form-control" maxlength="20" value="@(Model.OAuthProvider.Name)" placeholder="名称">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-ClientId">ClientId</label>
                            <input id="input-ClientId" name="ClientId" type="text" class="form-control" maxlength="200" value="@(Model.OAuthProvider.ClientId)" placeholder="ClientId">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-ClientSecret">ClientSecret</label>
                            <input id="input-ClientSecret" name="ClientSecret" type="text" class="form-control" maxlength="200" value="@(Model.OAuthProvider.ClientSecret)" placeholder="ClientSecret">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-Scope">Scope</label>
                            <input id="input-Scope" name="Scope" type="text" class="form-control" maxlength="200" value="@(Model.OAuthProvider.Scope)" placeholder="Scope">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-CallbackEndpoint">CallbackEndpoint</label>
                            <input id="input-CallbackEndpoint" name="CallbackEndpoint" type="url" class="form-control" maxlength="200" value="@(Model.OAuthProvider.CallbackEndpoint)" placeholder="CallbackEndpoint">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-BaseUrl">BaseUrl</label>
                            <input id="input-BaseUrl" name="BaseUrl" type="url" class="form-control" maxlength="200" value="@(Model.OAuthProvider.BaseUrl)" placeholder="BaseUrl">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-AuthorizationEndpoint">AuthorizationEndpoint</label>
                            <input id="input-AuthorizationEndpoint" name="AuthorizationEndpoint" type="text" class="form-control" maxlength="200" value="@(Model.OAuthProvider.AuthorizationEndpoint)" placeholder="AuthorizationEndpoint">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-TokenEndpoint">TokenEndpoint</label>
                            <input id="input-TokenEndpoint" name="TokenEndpoint" type="text" class="form-control" maxlength="200" value="@(Model.OAuthProvider.TokenEndpoint)" placeho placeholder="TokenEndpoint">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-UserEndpoint">UserEndpoint</label>
                            <input id="input-UserEndpoint" name="UserEndpoint" type="text" class="form-control" maxlength="200" value="@(Model.OAuthProvider.UserEndpoint)" placehol placeholder="UserEndpoint">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-Priority">排序</label>
                            <input id="input-Priority" name="Priority" type="text" class="form-control" maxlength="300" value="@(Model.OAuthProvider.Priority)" placeholder="排序">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-Extra">备注</label>
                            <input id="input-Extra" name="Extra" type="text" class="form-control" maxlength="300" value="@(Model.OAuthProvider.Extra)" placeholder="备注">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="fg-line">
                            <label for="input-Status">状态</label>
                            <select id="input-Status" name="Status" class="form-control">
                                <option value="true" @(Model.OAuthProvider.Status ? "selected" : string.Empty)>可用</option>
                                <option value="false" @(!Model.OAuthProvider.Status ? "selected" : string.Empty)>不可用</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="button" class="btn btn-primary btn-lg btn-block waves-effect" onclick="submitForm(this);" data-loading-text="提交中...">
                            提 交
                        </button>

                    </div>
            }
        </div>
    </div>
</div>
