@model ActItemDetailModel

<div class="container">
    <div class="card">

        <div class="card-header ch-alt">
            <h2>@(Model.ActItem.Id > 0 ? "编辑" : "添加") 官方活动条目</h2>

        </div>
        <div class="card-body card-padding">
            @using (Html.BeginForm())
            {
                @if (Model.ActItem.Id > 0)
                {
                    <div class="form-group">
                        <div class="fg-line">
                            <label>Id</label>
                            <p class="form-control-static">@(Model.ActItem.Id)</p>
                        </div>
                    </div>
                }
                <div class="form-group">
                    <div class="fg-line">
                        <label for="input-Name">名称</label>
                        <input id="input-Name" name="Name" type="text" class="form-control" maxlength="50" value="@(Model.ActItem.Name)" placeholder="名称">
                    </div>
                </div>

                <div class="form-group">
                    <div class="fg-line">
                        <label for="input-Title">标题</label>
                        <input id="input-Title" name="Title" type="text" class="form-control" maxlength="50" value="@(Model.ActItem.Title)" placeholder="标题">
                    </div>
                </div>
                <div class="form-group">
                    <div class="fg-line">
                        <label for="input-Icon">图标</label>
                        <input id="input-Icon" name="Icon" type="text" class="form-control" maxlength="300" value="@(Model.ActItem.Icon)" placeholder="图标">
                    </div>
                </div>
                <div class="form-group">
                    <div class="fg-line">
                        <label for="input-Picture">图片</label>
                        <input id="input-Picture" name="Picture" type="url" class="form-control" maxlength="300" value="@(Model.ActItem.Picture)" placeholder="图片">
                    </div>
                </div>

                <div class="form-group">
                    <div class="fg-line">
                        <label for="input-StartedOn">开始时间</label>
                        <input id="input-StartedOn" name="StartedOn" type="url" class="form-control date-time-picker" maxlength="18" value="@(Model.ActItem.StartedOn.ToString("yyyy-MM-dd HH:mm:ss"))" p placeholder="开始时间">
                    </div>
                </div>
                <div class="form-group">
                    <div class="fg-line">
                        <label for="input-StoppedOn">结束时间</label>
                        <input id="input-StoppedOn" name="StoppedOn" type="url" class="form-control date-time-picker" maxlength="18" value="@(Model.ActItem.StoppedOn.ToString("yyyy-MM-dd HH:mm:ss"))" p placeholder="结束时间">
                    </div>
                </div>

                <div class="form-group">
                    <div class="fg-line">
                        <label for="input-Summary">描述</label>
                        <input id="input-Summary" name="Summary" type="text" class="form-control" maxlength="200" value="@(Model.ActItem.Summary)" place placeholder="描述">
                    </div>
                </div>

                <div class="form-group">
                    <div class="fg-line">
                        <label for="input-Priority">排序</label>
                        <input id="input-Priority" name="Priority" type="text" class="form-control" maxlength="4" value="@(Model.ActItem.Priority)" p placeholder="排序">
                    </div>
                </div>
                <div class="form-group">
                    <div class="fg-line">
                        <label for="input-Extra">备注</label>
                        <input id="input-Extra" name="Extra" type="text" class="form-control" maxlength="300" value="@(Model.ActItem.Extra)" p placeholder="备注">
                    </div>
                </div>
                <div class="form-group">
                    <div class="fg-line">
                        <label for="input-Status">状态</label>
                        <select id="input-Status" name="Status" class="form-control">
                            <option value="true" @(Model.ActItem.Status ? "selected" : string.Empty)>可用</option>
                            <option value="false" @(!Model.ActItem.Status ? "selected" : string.Empty)>不可用</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <button type="button" class="btn btn-primary btn-lg btn-block waves-effect" onclick="submitForm(this);" data-loading-text="提交中...">
                        提 交
                    </button>

                </div>
            }
        </div>

    </div>
</div>
@section css{
    <link href="@(WebSite.Static)/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
}
@section js{
    <script src="@(WebSite.Static)/js/moment.min.js"></script>
    <script src="@(WebSite.Static)/js/bootstrap-datetimepicker.min.js"></script>

}

